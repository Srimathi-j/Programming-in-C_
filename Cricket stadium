#include <math.h>
#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <assert.h>
#include <limits.h>
#include <stdbool.h>

int main() {
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */
    int l,b;
    scanf("%d%d",&l,&b);
    printf("%d\n",2*(l+b));
    printf("%d",l*b);
    return 0;
}
